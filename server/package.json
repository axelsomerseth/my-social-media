{
  "name": "my-social-media-server",
  "version": "1.0.0",
  "description": "My Social Media server.",
  "main": "./build/index.js",
  "private": true,
  "type": "module",
  "engines": {
    "npm": ">=8.15.0",
    "node": ">=16.17.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "ts-node ./source/index.ts",
    "build": "npx tsc",
    "build:declaration": "npx tsc --declaration",
    "test": "npx jest",
    "mongodb:run": "brew services run mongodb-community",
    "mongodb:stop": "brew services stop mongodb-community",
    "mongodb:info": "brew services info mongodb-community",
    "mongosh": "mongosh",
    "test-db": "ts-node ./source/db/index.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "graphql"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axelsomerseth/my-social-media.git"
  },
  "author": "Axel Somerseth Cordova <axelsomerseth@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "mongodb": "^5.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.1"
  }
}